---
// layouts
import Layout from "../layouts/Layout.astro";
// components
import Icon from "astro-icon";
import Navbar from "../components/Navbar.astro";
import Button from "../components/Button.astro";
// page data
import { features } from "../data"
---

<Layout>
  <!--start: Hero Section -->
  <section class="flex flex-col h-screen p-4 bg-[url('/assets/header-bg.jpg')] bg-cover bg-center relative">
    <div class=" absolute inset-0 bg-slate-900/50 z-0" aria-hidden="true"></div>
    <header class="isolate">
      <Navbar />
    </header>
    <div class="isolate flex-1 grid place-content-center text-white text-center">
      <p class="text-xl uppercase">One page creative agency</p>
      <h1 class="text-5xl font-bold max-w-[20ch] leading-normal">Brand strategy & digital design agency</h1>
    </div>
  </section>
  <!--end: Hero Section -->
  <!--start: About Section -->
  <section id="about">
    <div class="grid grid-cols-2 bg-slate-100 pt-4 text-lg">
      <img src="/assets/about-left-img.jpg" alt="">
      <div class="bg-white p-12 space-y-6 grid place-content-center">
        <h2 class="text-4xl text-slate-950 font-bold">Who We Are</h2>
        <p class="text-pink-600 max-w-[42ch]">
          An award-winning design and development team thar is proud of our work.
        </p>
        <p>
          objectively innovate empowered manufactured products whereas parallel platforms. Holisticly predominate extensible testing procedures for reliable supply chains. Dramatically engage top-line web services vis-a-vis cutting-edge deliverables
        </p>
        <div>
          <Button content="Read More" />
        </div>
      </div>
    </div>
    <div class="bg-zinc-950 text-white">
      <div class="w-[min(100%,92rem)] mx-auto px-8 flex gap-4 py-16">
        {
          features.map((feature) => (
            <div class="space-y-3 text-center ">
              <Icon name={feature.icon} size={62} class="text-pink-600 opacity-80 mx-auto"/>
              <h3 class="text-2xl">{feature.name}</h3>
              <p class="opacity-75">
                Lorem ipsum dolor sit amet consectetur adipisicing elit. Doloremque velit quidem mollitia!
              </p>
            </div>
          ))
        }
      </div>
    </div>
  </section>
  <!--end: About Section -->
</Layout>
